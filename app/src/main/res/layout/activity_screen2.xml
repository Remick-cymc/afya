<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screen2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="skip"
            android:textSize="20sp"
            android:textColor="#2112F6"
            android:textAlignment="textEnd"
            android:id="@+id/skip"/>
    </LinearLayout>

   <ImageView
       android:layout_width="400dp"
       android:layout_height="200dp"
       android:padding="20dp"
       android:src="@drawable/lab1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUALITY SERVICE"
        android:textColor="#E11C1C"
        android:textSize="30sp"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our lab tests are performed at certified, accredited facilities using state-of-the-art technology. We ensure accurate, reliable results with fast turnaround times, all while prioritizing patient privacy and data security."
        android:layout_margin="15sp"
        android:textSize="25dp"
        android:textColor="#826E6E"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/fab"
            android:backgroundTint="#243EE6"
            android:layout_gravity="bottom|end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:elevation="6dp"
            android:textColor="#ECE9E9"
            android:textSize="20sp"
            app:layout_anchor="@id/fab"
            app:layout_anchorGravity="center"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>





</LinearLayout>